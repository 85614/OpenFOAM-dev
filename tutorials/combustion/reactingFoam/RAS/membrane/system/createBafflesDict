FoamFile
{
    format      ascii;
    class       dictionary;
    object      createBafflesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

internalFacesOnly true;

baffles
{
    membrane
    {
        type        faceZone;
        zoneName    membrane;

        patches
        {
            master
            {
                name            membranePipe;
                type            mappedWall;
                sampleMode      nearestPatchFace;
                samplePatch     membraneSleeve;
            }
            slave
            {
                name            membraneSleeve;
                type            mappedWall;
                sampleMode      nearestPatchFace;
                samplePatch     membranePipe;
            }
        }
    }
}


